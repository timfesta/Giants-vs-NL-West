


								#  ---------- Giants vs NL West --------  #

def play_the_rockies
	puts "YESSS!!! The Giants beat the Dodgers!!"
	puts "The Giants are now playing the Rockies"
	puts "Do the Giants win or lose?"
	print "> "
	choice = $stdin.gets.chomp

	if choice == "win"
		puts "The Giants finished 2 - 0. AWESOME!!!"
	else choice == "lose"
		puts "The Giants finished 1 - 1"
		puts "Thats ok... better luck next time"
		
	end
end

def play_the_diamondbacks
	puts "The Giants lost to the Dodgers??..."
	puts "Bummer, the Giants are now playing the Diamondbacks"
	puts "Do the Giants win or lose? "
	print "> "
	choice = $stdin.gets.chomp

	if choice == "win"
		puts "The Giants finished 1 - 1"
		puts "Thats ok... better luck next time"
	else choice == "lose"
		puts "The Giants finished 0 - 2??..."
		puts "Their must be some sort of human error :)"
	end
end

def start
	puts "The Giants and are playing the Dodgers"
	puts "Do they win of lose?"
	print "> "
	choice = $stdin.gets.chomp

	if choice == "win"
		play_the_rockies
	else
		play_the_diamondbacks
	end

end

start
